{
    "compilerOptions": {
        "target": "es2019",
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "preserve",
        "strict": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        // Disallow features that require cross-file information for emit.
        "isolatedModules": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        // Don't emit; allow Babel to transform files.
        //        "noEmit": true,
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "types": [
            "webpack-env",
            "jest",
            "node"
        ],
        "paths": {
            "@/*": ["resources/*"]
        }
    },
    "include": [
        "resources/**/*.ts",
        "resources/**/*.vue",
        "tests/**/*.ts",
        "specs/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}
